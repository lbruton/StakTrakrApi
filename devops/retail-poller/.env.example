# StakTrakr Home Poller — environment variables
# Copy to .env and fill in values. Never commit .env.

# Turso cloud database (shared with Fly.io container)
TURSO_DATABASE_URL=libsql://your-db.turso.io
TURSO_AUTH_TOKEN=your-auth-token

# Poller identity — written to price_snapshots.source for tracing
POLLER_ID=home

# Path to providers.json parent — expects data/retail/providers.json inside
DATA_DIR=/opt/poller/data

# Optional: restrict to specific coins for testing
# COINS=ase,age

# Optional: dry run (no DB writes)
# DRY_RUN=1
